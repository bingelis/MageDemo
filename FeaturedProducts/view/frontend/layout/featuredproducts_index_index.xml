        <attribute name="class" value="page-products" />
        <referenceContainer name="content">
            <block class="MageDemo\FeaturedProducts\Block\Product\Listing"
                   name="featured_products.list"
                   as="product_list"
                   template="MageDemo_FeaturedProducts::product/listing.phtml">
            </block>
        </referenceContainer>
    </body>
</page>
